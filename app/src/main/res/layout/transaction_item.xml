<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/header_hieght"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="@dimen/padding_4">

    <LinearLayout
        android:id="@+id/linItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:paddingTop="@dimen/padding_4"
        android:paddingBottom="@dimen/padding_4"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lines="1"
                android:maxLines="1"
                tools:text="MAIN"
                android:textColor="@color/black"
                android:textSize="@dimen/ds_text_size_large"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/accountNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lines="1"
                android:maxLines="1"
                tools:text="subtitle"
                android:textStyle="bold"
                android:textSize="@dimen/ds_text_size_medium" />
        </LinearLayout>

        <TextView
            android:id="@+id/ammount"
            android:textColor="@color/green"
            android:textStyle="bold"
            android:textSize="@dimen/ds_text_size_medium"
            android:paddingRight="@dimen/padding_4"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="+50.0"/>
    </LinearLayout>

</LinearLayout>