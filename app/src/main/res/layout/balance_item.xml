<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="wrap_content"
app:cardCornerRadius="@dimen/padding_8"
android:padding="@dimen/padding_4"
android:layout_marginStart="@dimen/padding_8"
android:layout_marginEnd="@dimen/padding_8"
>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:id="@+id/mainItems"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/padding_8"
        android:paddingBottom="@dimen/padding_8"
        android:paddingLeft="15dp"
        android:background="@color/grey_"
        >
        <TextView
            android:layout_marginTop="@dimen/padding_4"
            android:id="@+id/mainTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="You have"
            android:maxLines="1"
            android:textColor="@color/black"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:textSize="@dimen/ds_text_size_medium"
            android:textStyle="bold" />

        <TextView
            android:layout_marginTop="@dimen/padding_4"
            android:id="@+id/amount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:maxLines="1"
            android:textColor="@color/teal_700"
            app:layout_constraintTop_toBottomOf="@+id/mainTitle"
            app:layout_constraintStart_toStartOf="parent"
            android:textSize="@dimen/ds_text_size_xxlarge"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/accountNo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Account No"
            android:maxLines="1"
            android:textIsSelectable="true"
            android:singleLine="true"
            android:layout_marginTop="@dimen/padding_8"
            android:marqueeRepeatLimit="marquee_forever"
            app:layout_constraintTop_toBottomOf="@+id/amount"
            app:layout_constraintStart_toStartOf="parent"
            android:textSize="@dimen/ds_text_size_medium"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtaccountNo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="IBM"
            android:maxLines="1"
            android:textIsSelectable="true"
            android:singleLine="true"
            android:textColor="@color/dark_grey"
            android:layout_marginTop="@dimen/padding_4"
            android:marqueeRepeatLimit="marquee_forever"
            app:layout_constraintTop_toBottomOf="@+id/accountNo"
            app:layout_constraintStart_toStartOf="parent"
            android:textSize="@dimen/ds_text_size_medium"
            android:textStyle="bold" />



        <TextView
            android:id="@+id/accntHolder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Account Holder"
            android:maxLines="1"
            android:textIsSelectable="true"
            android:singleLine="true"
            android:layout_marginTop="@dimen/padding_8"
            android:marqueeRepeatLimit="marquee_forever"
            app:layout_constraintTop_toBottomOf="@+id/txtaccountNo"
            app:layout_constraintStart_toStartOf="parent"
            android:textSize="@dimen/ds_text_size_medium"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/txtaccntHolder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:padding="@dimen/padding_4"
            android:gravity="center"
            android:textColor="@color/black"
            android:textIsSelectable="true"
            android:layout_marginTop="@dimen/padding_4"
            android:layout_marginBottom="@dimen/padding_4"
            android:marqueeRepeatLimit="marquee_forever"
            app:layout_constraintTop_toBottomOf="@+id/accntHolder"
            app:layout_constraintStart_toStartOf="parent"
            android:textSize="@dimen/ds_text_size_medium"
            android:textStyle="bold" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>